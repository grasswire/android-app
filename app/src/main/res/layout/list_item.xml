<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white_background_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView android:id="@id/link_profile_image"
            android:src="@drawable/gw_placeholder"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:paddingLeft="10dp"
            android:scaleType="fitCenter" />

        <TextView android:id="@id/link_profile_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@id/link_type"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@id/link_elapsed_time"
            android:textSize="16sp"
            android:paddingLeft="30dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView android:id="@id/link_title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@id/link_image"
            android:src="@drawable/gw_placeholder"
            android:layout_height="240dp"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter" />

        <TextView android:id="@id/link_image_play_icon"
            style="?android:textAppearanceMedium"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="@color/title_foreground_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>


    <TextView android:id="@id/link_description"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

